<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_subject_name_and_marks" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/subject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="@string/enter_subject_name"
        android:inputType="textPersonName"

        android:minHeight="48dp"
        android:text="@string/subject1"/>

    <EditText
        android:id="@+id/sub1ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject1"
        android:layout_marginTop="6dp"
        android:hint="@string/enter_external_main_marks"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/sub1exttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:hint="@string/total_marks"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/sub1int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub1ext"
        android:layout_marginTop="6dp"
        android:hint="@string/enter_internal_marks"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        tools:ignore="DuplicateSpeakableTextCheck" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub1inttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub1exttotal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:hint="@string/total_marks"
        android:inputType="number"
        android:minHeight="48dp" />


     <EditText
        android:importantForAutofill="no"
        android:id="@+id/subject2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub1inttotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_subject_name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/subject2" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub2ext"
        android:layout_width="wrap_content"
