        android:layout_height="wrap_content"
        android:layout_below="@id/sub2exttotal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:hint="@string/total_marks"
        android:inputType="number"
        android:minHeight="48dp" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/subject3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub2inttotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_subject_name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/subject3" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub3ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject3"
        android:layout_marginTop="6dp"
        android:hint="@string/enter_external_main_marks"
        android:inputType="number"
        android:minHeight="48dp" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub3exttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject3"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:hint="@string/total_marks"
        android:inputType="number"
        android:minHeight="48dp" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub3int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub3ext"
        android:layout_marginTop="6dp"
        android:hint="@string/enter_internal_marks"
        android:inputType="number"
        android:minHeight="48dp" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub3inttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub3exttotal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:hint="@string/total_marks"
        android:inputType="number"
        android:minHeight="48dp" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/subject4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub3inttotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/enter_subject_name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="@string/subject4" />

     <EditText
        android:importantForAutofill="no"
        android:id="@+id/sub4ext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
